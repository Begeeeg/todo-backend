{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "NodeNext",

    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./src", "src/types"],
  "exclude": ["node_modules"]
}
